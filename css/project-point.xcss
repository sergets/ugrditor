            /* Точка: общее */
        
            .point {
                display: block;
                width: 350px;
                background: white;
                overflow: auto;
            }
           
            .point h3, .point-title-input {
                font-size: 15px;
                line-height: 20px;
                font-family: dejavu sans light, dejavu sans, segoe ui, verdana,sans-serif;
                font-weight: 100;
            }

            .point h3 {
                background: #fc9;
                padding: 3px 25px;
                height: 19px;
                margin-top: 0px;
                margin-bottom: 2px;
                border: 0px;
                display: block;
            }
            
            .point-edit-button.button {
                background-position: -16px;
            }

            .point-edit-button:hover::before {
                content: 'Редактировать' !important;
            }
            
            .point .point-edit-only {
                display: none;
            }
            
            .point.editing .point-edit-only {
                display: block;
            }
            
            .point.editing .point-view-only {
                display: none;
            }
            
            .point.editing .point-edit-blur {
                opacity: 0.3;
            }
            
            /* Точка: просмотр */
            
            .point .text {
                margin-top: 5px;
                margin-bottom: 5px;
                margin-left: 25px;
                margin-right: 20px;
                width: 320px;
                clear: left;
                min-height: 34px;
            }
            
            .point .question {
                margin-top: 5px;
                margin-bottom: 5px;
                margin-left: 25px;
                margin-right: 20px;
                width: 320px;
                font: 11px verdana;
                clear: left;
                color: #f84;
                min-height: 17px;
            }
      
            .point-data-pane {
                white-space: nowrap;
                color: #0c4068;
                margin-left: 25px;
                margin-top: 2px;
                width: 200px;
                margin-bottom: 10px;
            }       
            
            .point-author::before, .point-edited-by::before, .point-date::before {
                content: '';
                display: inline-block;
                margin-top: 2px;
                margin-bottom: -2px;
                margin-right: 2px;
                width: 11px;
                height: 11px;
            }
                
            .point-author::before {
                background: url(//img/new.png);
            }
            
            .point-edited-by::before, .point-date::before {
                background: url(//img/edit.png);
            }
            
            .point-date {
                margin-left: 15px;
                color: #f84;
            }
       
            /* Точка: редактирование */
            
            .point-title-input {
                font-size: 11pt;
                font-family: dejavu sans light, dejavu sans, segoe ui, verdana,sans-serif;
                font-weight: 100;
                width: 290px;
            }
            
            .point textarea.text, .point textarea.question {
                margin-top: 1px;
                margin-bottom: 2px;
                margin-left: 23px;
            }
            
            .point-save-toolbar {
                margin-top: 5px;
                margin-left: 23px;
                margin-bottom: 5px;
            }

            .point-save-button {
                margin-left: 238px;
                width: 85px;
                z-index: 2;
                cursor: pointer;
                position: absolute;
            }
            
            .point-delete-button {
                width: 23px;
                z-index: 2;
                position: absolute;
                background: red url(//sxml/misc/img/trash.png) no-repeat;
                background-position: 6px 5px;
                cursor: pointer;
            }
            
            /* Точка в левой панели */
            
            .project-list-point {
                margin-top: 10px;
                margin-bottom: 10px;
            }
            
            .project-list-point h3 {
                background: rgba(256, 128, 64, 0.6);
                font-weight: bold;
                font-size: 10pt;
                font-family: dejavu sans light, dejavu sans, segoe ui, verdana,sans-serif;
                font-weight: 100;
                margin: 2px -3px 2px -3px;
                padding: 3px;
                color: black;
            }
            
            .project-list-point .text {
                max-height: 50px;
                overflow: hidden;
                margin-bottom: 5px;
            }            
            
            .project-list-point .q {
                max-height: 100px;
                overflow: hidden;
                margin-bottom: 5px;
                color: #f84;
            }            
            