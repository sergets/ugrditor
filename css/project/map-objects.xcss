            .map-object {
                display: block;
                width: 355px;
                background: white;
                overflow: auto;
            }
           
            .map-object h3, .map-object .title-input {
                font-size: 15px;
                line-height: 20px;
                font-family: djvsl,dejavu sans light, dejavu sans, segoe ui, verdana,sans-serif;
                font-weight: 100;
            }

            .map-object h3 {
                background: #fc9;
                padding: 3px 25px;
                height: 19px;
                margin-top: 0px;
                margin-bottom: 2px;
                border: 0px;
                display: block;
            }
            
            .map-object .edit-button.button {
                background-position: -16px;
            }

            .map-object .edit-button:hover::before {
                content: 'Редактировать' !important;
            }
            
            .map-object .edit-only {
                display: none;
            }
            
            .map-object.editing .edit-only {
                display: block;
            }
            
            .map-object.editing .view-only {
                display: none;
            }
            
            .map-object.editing .edit-blur {
                opacity: 0.3;
            }

            .map-object .marker {
                float: left;
                margin-left: -20px;
                position: absolute;
            }
            
            /* Точка: просмотр */
            
            .map-object p, .map-object textarea {
                margin-top: 5px;
                margin-bottom: 5px;
                margin-left: 25px;
                margin-right: 20px;
                width: 320px;
                clear: left;
                min-height: 34px;
            }
            
            .map-object .data-pane {
                white-space: nowrap;
                color: #0c4068;
                margin-left: 25px;
                margin-top: 2px;
                width: 200px;
                margin-bottom: 10px;
            }       
            
            .map-object .editor-author::before, .map-object .edited-by::before, .map-object .editor-date::before {
                content: '';
                display: inline-block;
                margin-top: 2px;
                margin-bottom: -2px;
                margin-right: 2px;
                width: 11px;
                height: 11px;
            }
                
            .map-object .editor-author::before {
                background: url(//img/new.png);
            }
            
            .map-object .edited-by::before, .map-object .date::before {
                background: url(//img/edit.png);
            }
            
            .map-object .editor-date {
                margin-left: 15px;
                color: #f84;
            }
       
            /* Точка: редактирование */
            
            .map-object .title-input {
                font-size: 11pt;
                font-family: djvsl,dejavu sans light, dejavu sans, segoe ui, verdana,sans-serif;
                font-weight: 100;
                width: 290px;
            }
            
